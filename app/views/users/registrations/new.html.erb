<% provide(:title, "新規会員登録") %>
<div class="row">

  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center"><i class="fas fa-user-edit"></i>新規会員登録</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="form-group col">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %><br />
          <%= f.label :kana_last_name, "セイ" %><br />
          <%= f.text_field :kana_last_name, autofocus: true, class: "form-control" %><br />
        </div>
        <div class="form-group col">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %><br />
          <%= f.label :kana_first_name, "メイ" %><br />
          <%= f.text_field :kana_first_name, autofocus: true, class: "form-control" %><br />
        </div>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, "郵便番号" %><br />
        <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address, "住所" %><br />
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "電話番号" %><br />
        <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,"パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
      </div>

    <% end %>
  </div>
</div>

