<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center"><i class="fas fa-wallet"></i>支出記録登録</h2>
  </div>

  <div class="col-md-6 offset-md-3">
  <%= form_with model:[@expense], local: true do |f| %>
    <div class="form-group">
      <%= f.label :amount, "金額" %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">¥</span>
        </div>
        <%= f.number_field :amount, class:"form-control", id: "own-expense-paid-amount", min: 0, max: 9999999999, value: @expense.amount, required: true %>
      </div>
    </div>



    <div class="form-group">
      <%= f.label :expense_type_id, "支出カテゴリ選択" %>
      <div>
        <%= f.collection_select :expense_type_id, @expense_types, :id, :type_name, {}, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, "日付" %>
      <%= f.date_field :date, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :note, "メモ" %>
      <%= f.text_field :note, maxlength: 100, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "画像" %>
      <%= f.attachment_field :image %>
    </div>


    <div class="form-group">
      <%= f.submit "記録", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>
  </div>
</div>