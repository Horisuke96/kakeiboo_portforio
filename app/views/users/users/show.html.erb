<% provide(:title, "アカウント情報") %>
<div class="row">
	<div class="col-md-10 offset-md-1">
		<h2 class="text-center">マイページ</h2>
		<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
			<%= link_to "編集する", edit_user_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
		</p>

		<div class="card">
		  <div class="">
        <%= attachment_image_tag @user, :background_image, fallback: "kominka.jpg",size: "500x500", class: "bd-placeholder-img card-img-top" %>
      </div>
      <div class="post-user-box d-flex align-items-center mt-3 mb-3">
        <div class="post-user">
          <div class=""><%= attachment_image_tag(@user, :profile_image, size: "100x100", fallback: "sample_kakeiboo.jpg", class: "rounded-circle" ) %></div>
          <div class="text-center"><%= @user.nickname %></div>
        </div>
        <div class="card-body"><%= @user.introduction %></div>
      </div>
    </div>


		<table class="table table-bordered" >
			<tbody>
				<tr>
					<td class="info col-xs-2">ニックネーム</td>
					<td class="text-left"><%= @user.nickname %></td>
				</tr>
				<tr>
					<td class="info">氏名</td>
					<td class="text-left"><%= full_name(@user) %></td>
				</tr>
				<tr>
					<td class="info">カナ</td>
					<td class="text-left"><%= kana_full_name(@user) %></td>
				</tr>
				<tr>
					<td class="info">郵便番号</td>
					<td class="text-left"><%= @user.postal_code %></td>
				</tr>
				<tr>
					<td class="info">住所</td>
					<td class="text-left"><%= @user.address %></td>
				</tr>
				<tr>
					<td class="info">電話番号</td>
					<td class="text-left"><%= @user.phone_number %></td>
				</tr>
				<tr>
					<td class="info">メールアドレス</td>
					<td class="text-left"><%= @user.email %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>