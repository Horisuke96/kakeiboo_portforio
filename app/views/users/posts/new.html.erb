<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center mb-5"><i class="fas fa-wallet"></i>目標登録</h2>
  </div>

  <div class="col-md-6 offset-md-3">
    <%= form_with model: [@post], local: true do |f| %>
    <%= render 'layouts/error_msg', model: f.object %>
      <div class="form-group">
        <%= f.label :image, "紹介画像" %>
        <%= f.attachment_field :post_image %>
      </div>
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "紹介文" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :achievement, "達成率" %><br>
        <%= f.select :achievement, [*1..100], class: "form-control" %>%
      </div>
      <div class="form-group">
      <%= f.submit "投稿", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>