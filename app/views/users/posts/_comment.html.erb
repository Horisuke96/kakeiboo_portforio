<table>
    <% @post.post_comments.each do |post_comment| %>
    <tr>
      <td>
      <%= link_to (post_comment.user) do %>
        <%= attachment_image_tag(post_comment.user, :profile_image, size: "100x100", fallback: "sample_kakeiboo.jpg") %></p>
        <%= full_name(post_comment.user)%>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
        <% if post_comment.user_id == current_user.id %>
          <%= link_to "Destroy", post_post_comment_path(@post,post_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>