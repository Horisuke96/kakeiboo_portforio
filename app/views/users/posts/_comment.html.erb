<table>
    <% @post.post_comments.each do |post_comment| %>
    <tr>
      <td>
      <%= link_to (post_comment.user) do %>
        <%= attachment_image_tag(post_comment.user, :profile_image, size: "70x70", fallback: "sample_kakeiboo.jpg", class: "rounded-circle") %></p>
        <%= post_comment.user.nickname%>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
        <% if post_comment.user_id == current_user.id %>
          <%= link_to "", post_post_comment_path(@post,post_comment), method: :delete, remote: true, class: "fas fa-trash-alt" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>