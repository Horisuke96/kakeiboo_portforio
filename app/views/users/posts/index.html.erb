<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, fallback: "kominka.jpg", class: "post-image card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.body %></p>
        </div>
        <div class="card-body">
          <p>ユーザーネーム：<%= full_name(post.user) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>