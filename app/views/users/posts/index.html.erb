<div class="row">
  <div class="col-md-12">
    <div style="background:transparent !important" class="jumbotron text-center">
      <h2 class="jumbotron-heading">みんなの目標タイムライン</h2>
      <p class="lead text-muted">皆さんの貯蓄にまつわる目標を見てみましょう！</p>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, fallback: "kominka.jpg", class: "post-image card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text text-truncate"><%= post.body %></p>
        </div>
        <div class="card-body d-flex align-items-center">
          <div class="post-user">
            <div class=""><%= attachment_image_tag(post.user, :profile_image, size: "50x50", fallback: "sample_kakeiboo.jpg", class: "rounded-circle" ) %></div>
            <div class=""><%= full_name(post.user) %></div>
          </div>
          <div id="likes_buttons<%= post.id %>">

          </div>
          <div class="fas fa-comment fa-lg ml-4"></div>
        </div>
        <div class="card-footer text-muted text-right">
          <%= post.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
    </div>
  <% end %>
</div>