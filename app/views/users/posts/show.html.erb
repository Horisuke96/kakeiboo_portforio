<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="post-user-box d-flex align-items-center">
        <div class="post-user">
          <div class=""><%= attachment_image_tag(@post.user, :profile_image, size: "100x100", fallback: "sample_kakeiboo.jpg", class: "rounded-circle" ) %></div>
          <div class="text-center"><%= full_name(@post.user) %></div>
        </div>
      </div>
      <p class="text-right">投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      <h1 class="card-title text-center">
        <%= @post.title %>
      </h1>
      <div class="card-body">
        <%= @post.body %>
      </div>
      <div class="post-image-show">
        <%= attachment_image_tag @post, :post_image, fallback: "kominka.jpg",size: "500x500", class: "bd-placeholder-img card-img-bottom" %>
      </div>
      <div class="card-body">
        <div class="fas fa-comment fa-lg ml-4 float-right"></div>
        <div class="float-right"><%= @post.likes.count %></div>
        <% if @post.user_id == current_user.id %>
          <%= link_to post_path(@post), method: :delete do %>
            <div class="fas fa-trash-alt fa-lg ml-4 float-right"></div>
          <% end %>
          <%= link_to edit_post_path(@post) do %>
            <div class="fas fa-edit fa-lg ml-4 float-right"></div>
          <% end %>
        <% else %>
          <% if current_user.liked_by?(@post.id) %>       <!--すでにいいねしているか確認-->
            <%= link_to post_likes_path(current_user.likes.find_by(post: @post)), method: :delete do %>
              <div class="fas fa-heart fa-lg ml-4 float-right"></div>
            <% end %>
          <% else %>
            <%= link_to post_likes_path(@post), method: :post do %>
              <div class="far fa-heart fa-lg ml-4 float-right"></div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>